    "build:css": "postcss ./src/assets/css/style.css -o ./_site/assets/css/style.css",
    "build:eleventy": "eleventy",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:css build:eleventy"
  },
  "keywords": [],
