    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "luxon": "^3.4.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.3"
  }
}