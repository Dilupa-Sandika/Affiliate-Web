    <!-- Mobile Navigation JavaScript -->
    <script>
        (function() {
            'use strict';
            
            let mobileMenuBtn, mobileMenu, mobileMenuPanel, mobileMenuBackdrop, mobileMenuClose, mainNav;
            let isMenuOpen = false;
            
            function initMobileMenu() {
                mobileMenuBtn = document.getElementById('mobile-menu-btn');
                mobileMenu = document.getElementById('mobile-menu');
                mobileMenuPanel = document.getElementById('mobile-menu-panel');
                mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
                mobileMenuClose = document.getElementById('mobile-menu-close');
                mainNav = document.getElementById('main-nav');
                
                if (!mobileMenuBtn || !mobileMenu || !mobileMenuPanel || !mobileMenuBackdrop) {
                    return false;
                }
                
                mobileMenuBtn.addEventListener('click', toggleMenu);
                mobileMenuBackdrop.addEventListener('click', closeMenu);
                if (mobileMenuClose) {
                    mobileMenuClose.addEventListener('click', closeMenu);
                }
                
                document.addEventListener('keydown', handleKeyPress);
                
                const menuLinks = mobileMenu.querySelectorAll('a');
                menuLinks.forEach(link => {
                    link.addEventListener('click', closeMenu);
                });
                
                return true;
            }
            
            function toggleMenu(e) {
                e.preventDefault();
                e.stopPropagation();
                
                if (isMenuOpen) {
                    closeMenu();
                } else {
                    openMenu();
                }
            }
            
            function openMenu() {
                if (!mobileMenu || !mobileMenuPanel || !mobileMenuBtn) return;
                
                isMenuOpen = true;
                mobileMenu.classList.add('active');
                mobileMenuBtn.classList.add('active');
                mobileMenuBtn.setAttribute('aria-expanded', 'true');
                document.body.style.overflow = 'hidden';
            }
            
            function closeMenu() {
                if (!mobileMenu || !mobileMenuPanel || !mobileMenuBtn) return;
                
                isMenuOpen = false;
                mobileMenu.classList.remove('active');
                mobileMenuBtn.classList.remove('active');
                mobileMenuBtn.setAttribute('aria-expanded', 'false');
                document.body.style.overflow = '';
            }
            
            function handleKeyPress(e) {
                if (e.key === 'Escape' && isMenuOpen) {
                    closeMenu();
                }
            }
            
            function initNavbarEffects() {
                if (!mainNav) return;
                
                function updateNavbar() {
                    const currentScrollY = window.scrollY;
                    
                    if (currentScrollY > 100) {
                        mainNav.style.background = 'rgba(15, 23, 42, 0.95)';
                    } else {
                        mainNav.style.background = 'rgba(15, 23, 42, 0.8)';
                    }
                }
                
                let ticking = false;
                function handleScroll() {
                    if (!ticking) {
                        requestAnimationFrame(updateNavbar);
                        ticking = true;
                        setTimeout(() => ticking = false, 16);
                    }
                }
                
                window.addEventListener('scroll', handleScroll, { passive: true });
            }
            
            function initialize() {
                let attempts = 0;
                const maxAttempts = 10;
                
                function attemptInit() {
                    attempts++;
                    
                    if (initMobileMenu()) {
                        initNavbarEffects();
                    } else if (attempts < maxAttempts) {
                        setTimeout(attemptInit, 100);
                    }
                }
                
                attemptInit();
            }
            
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initialize);
            } else {
                initialize();
            }
            
            window.addEventListener('load', function() {
                if (!mobileMenuBtn) {
                    initialize();
                }
            });
            
            window.addEventListener('resize', function() {
                if (isMenuOpen && window.innerWidth >= 1024) {
                    closeMenu();
                }
            }, { passive: true });
            
        })();
    </script>
