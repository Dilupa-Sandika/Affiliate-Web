    <script>
        // Right-to-left sliding mobile menu
        window.addEventListener('load', function() {
            const btn = document.getElementById('mobile-menu-btn');
            const menu = document.getElementById('mobile-menu');
            const panel = document.getElementById('mobile-menu-panel');
            const backdrop = document.getElementById('mobile-menu-backdrop');
            const closeBtn = document.getElementById('mobile-menu-close');
            
            if (!btn || !menu || !panel || !backdrop) {
                console.error('Mobile menu elements missing');
                return;
            }
            
            function openMenu() {
                console.log('Opening mobile menu');
                menu.classList.remove('opacity-0', 'invisible');
                menu.style.pointerEvents = 'auto';
                menu.style.visibility = 'visible';
                panel.style.pointerEvents = 'auto';
                setTimeout(() => {
                    panel.classList.remove('translate-x-full');
                }, 10);
                document.body.style.overflow = 'hidden';
            }
            
            function closeMenu() {
                panel.classList.add('translate-x-full');
                setTimeout(() => {
                    menu.classList.add('opacity-0', 'invisible');
                    menu.style.pointerEvents = 'none';
                    document.body.style.overflow = '';
                }, 300);
            }
            
            // Open menu
            btn.onclick = function(e) {
                console.log('Hamburger button clicked');
                e.preventDefault();
                openMenu();
            };
            
            // Close menu handlers
            if (closeBtn) closeBtn.onclick = closeMenu;
            backdrop.onclick = closeMenu;
            
            // Close menu on link click but allow natural navigation
            menu.querySelectorAll('a').forEach(function(link) {
                link.addEventListener('click', function(e) {
                    console.log('Menu link clicked:', this.href);
                    // Close menu after a very short delay to allow click to register
                    setTimeout(() => {
                        closeMenu();
                    }, 50);
                });
            });
        });

        // Static navbar scroll effect (no hiding)
        const nav = document.getElementById('main-nav');
        
        window.addEventListener('scroll', () => {
            const currentScrollY = window.scrollY;
            
            if (currentScrollY > 100) {
                nav.classList.add('backdrop-blur-xl');
                nav.style.background = 'rgba(15, 23, 42, 0.95)';
            } else {
                nav.classList.remove('backdrop-blur-xl');
                nav.style.background = 'rgba(15, 23, 42, 0.8)';
            }
            
            // Keep navbar always visible (no hiding)
            nav.style.transform = 'translateY(0)';
        });

        // Ensure floating navigation works on mobile - iPhone 8 specific fixes
        const floatingNav = document.getElementById('floating-nav');
        if (floatingNav) {
            // Force visibility and positioning on mobile/iPhone
            floatingNav.style.display = 'flex';
            floatingNav.style.visibility = 'visible';
            floatingNav.style.opacity = '1';
            floatingNav.style.pointerEvents = 'auto';
            floatingNav.style.position = 'fixed';
            floatingNav.style.zIndex = '99998';
            floatingNav.style.right = window.innerWidth <= 480 ? '0.5rem' : '0.75rem';
            floatingNav.style.top = '50%';
            floatingNav.style.transform = 'translateY(-50%)';
            floatingNav.style.webkitTransform = 'translate3d(0, -50%, 0)';
            floatingNav.style.flexDirection = 'column';
            floatingNav.style.gap = window.innerWidth <= 480 ? '0.4rem' : '0.75rem';
            
            // Force circular shape on each link
            floatingNav.querySelectorAll('a').forEach((link, index) => {
                const size = window.innerWidth <= 480 ? '2.5rem' : '3rem';
                link.style.width = size;
                link.style.height = size;
                link.style.minWidth = size;
                link.style.minHeight = size;
                link.style.borderRadius = '50%';
                link.style.webkitBorderRadius = '50%';
                link.style.display = 'flex';
                link.style.alignItems = 'center';
                link.style.justifyContent = 'center';
                link.style.touchAction = 'manipulation';
                link.style.webkitTapHighlightColor = 'transparent';
                link.style.webkitTouchCallout = 'none';
                link.style.webkitUserSelect = 'none';
                link.style.overflow = 'hidden';
                
                // Add touch event handling for iPhone
                link.addEventListener('touchstart', function(e) {
                    this.style.transform = 'scale(0.9)';
                    this.style.webkitTransform = 'scale(0.9)';
                }, { passive: true });
                
                link.addEventListener('touchend', function(e) {
                    this.style.transform = 'scale(1)';
                    this.style.webkitTransform = 'scale(1)';
                }, { passive: true });
                
                link.addEventListener('touchcancel', function(e) {
                    this.style.transform = 'scale(1)';
                    this.style.webkitTransform = 'scale(1)';
                }, { passive: true });
                
                // Ensure span inside has proper styling
                const span = link.querySelector('span');
                if (span) {
                    span.style.fontSize = window.innerWidth <= 480 ? '0.7rem' : '0.875rem';
                    span.style.lineHeight = '1';
                    span.style.pointerEvents = 'none';
                }
            });
            
            // Force repaint on iPhone
            setTimeout(() => {
                floatingNav.style.display = 'none';
                floatingNav.offsetHeight; // Trigger reflow
                floatingNav.style.display = 'flex';
            }, 100);
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

