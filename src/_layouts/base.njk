    <script>
        // SIMPLE DROPDOWN MENU - NETLIFY COMPATIBLE
        document.addEventListener('DOMContentLoaded', function() {
            const btn = document.getElementById('mobile-menu-btn');
            const menu = document.getElementById('mobile-menu');
            
            if (!btn || !menu) {
                console.log('Mobile menu elements not found');
                return;
            }
            
            console.log('Mobile menu initialized');
            let isOpen = false;
            
            function toggleMenu() {
                if (isOpen) {
                    // Close menu
                    menu.classList.add('opacity-0', 'invisible');
                    menu.classList.remove('opacity-100', 'visible');
                    isOpen = false;
                    console.log('Menu closed');
                } else {
                    // Open menu
                    menu.classList.remove('opacity-0', 'invisible');
                    menu.classList.add('opacity-100', 'visible');
                    isOpen = true;
                    console.log('Menu opened');
                }
            }
            
            // Toggle on button click
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                toggleMenu();
            });
            
            // Close menu when clicking outside
            document.addEventListener('click', function(e) {
                if (isOpen && !menu.contains(e.target) && !btn.contains(e.target)) {
                    toggleMenu();
                }
            });
            
            // Handle navigation links
            const menuLinks = menu.querySelectorAll('a');
            menuLinks.forEach(function(link) {
                link.addEventListener('click', function() {
                    if (isOpen) {
                        toggleMenu();
                    }
                });
            });
        });

        // FACEBOOK-STYLE SCROLL BEHAVIOR
        const nav = document.getElementById('main-nav');
        const floatingNav = document.getElementById('floating-nav');
        let lastScrollY = window.scrollY;
        let ticking = false;
        
        function updateScrollBehavior() {
            const currentScrollY = window.scrollY;
            const scrollDifference = currentScrollY - lastScrollY;
            
            // Background effect for navbar
            if (currentScrollY > 100) {
                nav.classList.add('backdrop-blur-xl');
                nav.style.background = 'rgba(15, 23, 42, 0.95)';
            } else {
                nav.classList.remove('backdrop-blur-xl');
                nav.style.background = 'rgba(15, 23, 42, 0.8)';
            }
            
            // Facebook-style hide/show behavior
            if (window.innerWidth <= 768) { // Mobile only
                if (currentScrollY < 50) {
                    // Always show at top of page
                    nav.style.transform = 'translateY(0)';
                    if (floatingNav) {
                        floatingNav.style.transform = 'translateY(0)';
                        floatingNav.style.opacity = '1';
                    }
                } else if (scrollDifference > 5 && currentScrollY > 100) {
                    // Scrolling down - hide both
                    nav.style.transform = 'translateY(-100%)';
                    if (floatingNav) {
                        floatingNav.style.transform = 'translateY(120px)'; // Move further down to hide completely
                        floatingNav.style.opacity = '0';
                    }
                } else if (scrollDifference < -5) {
                    // Scrolling up - show both
                    nav.style.transform = 'translateY(0)';
                    if (floatingNav) {
                        floatingNav.style.transform = 'translateY(0)';
                        floatingNav.style.opacity = '1';
                    }
                }
            } else {
                // Desktop - always visible
                nav.style.transform = 'translateY(0)';
                if (floatingNav) {
                    floatingNav.style.transform = 'translateY(0)';
                    floatingNav.style.opacity = '1';
                }
            }
            
            lastScrollY = currentScrollY;
            ticking = false;
        }
        
        function requestScrollUpdate() {
            if (!ticking) {
                requestAnimationFrame(updateScrollBehavior);
                ticking = true;
            }
        }
        
        window.addEventListener('scroll', requestScrollUpdate, { passive: true });

        // Initialize floating navigation positioning
        if (floatingNav) {
            // Set initial styles for floating navigation
            floatingNav.style.transition = 'transform 0.3s ease-in-out, opacity 0.3s ease-in-out';
            floatingNav.style.transform = 'translateY(0)';
            floatingNav.style.opacity = '1';
            // Ensure it's properly positioned as fixed
            floatingNav.style.position = 'fixed';
            floatingNav.style.bottom = '1rem';
            floatingNav.style.right = '1rem';
            floatingNav.style.zIndex = '99998';
            floatingNav.style.display = 'flex';
            floatingNav.style.flexDirection = 'row';
            floatingNav.style.gap = '0.75rem';
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

