---
layout: base.njk
---

<!-- Blog Post Hero Section -->
<section class="relative pt-32 pb-16 bg-gradient-to-br from-slate-900 via-gray-900 to-neutral-900">
    <!-- Background Elements -->
    <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <div class="absolute top-20 left-20 w-72 h-72 bg-blue-500 rounded-full filter blur-3xl animate-pulse-subtle"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl animate-pulse-subtle animation-delay-400"></div>
    </div>

    <div class="relative container-custom">
        <div class="max-w-4xl mx-auto text-center">
            <!-- Category Badge -->
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-lg border border-white/20 text-white mb-6">
                <span class="w-2 h-2 bg-green-400 rounded-full mr-3 animate-pulse"></span>
                <span class="text-sm font-medium">Tech Experience Story</span>
            </div>

            <!-- Title -->
            <h1 class="heading-xl text-white mb-6">{{ title }}</h1>

            <!-- Meta Information -->
            <div class="flex flex-wrap items-center justify-center gap-6 text-gray-300 mb-8">
                <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>{{ date | date("MMMM dd, yyyy") }}</span>
                </div>
                <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>{{ content | striptags | wordcount / 200 | round }}{{ " min read" if (content | striptags | wordcount / 200 | round) > 0 else "1 min read" }}</span>
                </div>
                <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <span>Vegas Tech Hub Team</span>
                </div>
            </div>

            <!-- Description -->
            {% if description %}
            <p class="text-xl text-gray-100 max-w-3xl mx-auto leading-relaxed">{{ description }}</p>
            {% endif %}
        </div>
    </div>
</section>

<!-- Featured Image Section -->
{% if featuredImage %}
<section class="section-padding bg-white">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto">
            <div class="relative rounded-2xl overflow-hidden shadow-2xl">
                <img src="{{ featuredImage }}" alt="{{ title }}" class="w-full h-64 md:h-96 object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
        </div>
    </div>
</section>
{% endif %}

<!-- Article Content -->
<article class="section-padding bg-white">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto">
            <!-- Main Content -->
            <div class="prose prose-lg prose-neutral max-w-none">
                {{ content | safe }}
            </div>

            <!-- Article Footer -->
            <div class="mt-16 pt-8 border-t border-neutral-200">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
                    <!-- Tags -->
                    {% if tags %}
                    <div class="flex flex-wrap gap-2">
                        {% for tag in tags %}
                            {% if tag != "blog" %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-primary-100 text-primary-800">
                                {{ tag }}
                            </span>
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% endif %}

                    <!-- Share Buttons -->
                    <div class="flex items-center space-x-4">
                        <span class="text-sm font-medium text-neutral-600">Share:</span>
                        <a href="https://twitter.com/intent/tweet?text={{ title | url_encode }}&url={{ page.url | absoluteUrl(metadata.url) | url_encode }}" 
                           class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white hover:bg-blue-600 transition-colors"
                           target="_blank" rel="noopener">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                            </svg>
                        </a>
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ page.url | absoluteUrl(metadata.url) | url_encode }}" 
                           class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white hover:bg-blue-700 transition-colors"
                           target="_blank" rel="noopener">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

<!-- Related Articles Section -->
<section class="section-padding bg-gradient-to-br from-neutral-50 to-white">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h2 class="heading-lg text-neutral-900 mb-6">
                More 
                <span class="text-gradient">Tech Stories</span>
            </h2>
            <p class="text-xl text-neutral-600">
                Check out other problem-solving experiences from our community
            </p>
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Related posts would be populated here via Eleventy collections -->
                {% set relatedPosts = collections.blog | reverse | limit(4) %}
                {% for post in relatedPosts %}
                    {% if post.url != page.url %}
                    <article class="card-premium hover-lift">
                        {% if post.data.featuredImage %}
                        <div class="h-40 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg mb-4 overflow-hidden">
                            <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}" class="w-full h-full object-cover">
                        </div>
                        {% else %}
                        <div class="h-40 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg flex items-center justify-center mb-4">
                            <div class="text-4xl">ðŸ”§</div>
                        </div>
                        {% endif %}
                        
                        <div class="space-y-3">
                            <h3 class="text-xl font-semibold text-neutral-900 line-clamp-2">{{ post.data.title }}</h3>
                            <p class="text-neutral-600 text-sm line-clamp-3">{{ post.data.description or post.templateContent | striptags | truncate(120) }}</p>
                            
                            <div class="flex items-center justify-between text-xs text-neutral-500">
                                <span>{{ post.date | date("MMM dd, yyyy") }}</span>
                                <span>{{ post.templateContent | striptags | wordcount / 200 | round }}{{ " min read" if (post.templateContent | striptags | wordcount / 200 | round) > 0 else "1 min read" }}</span>
                            </div>
                            
                            <a href="{{ post.url }}" class="btn-outline w-full text-sm">Read Story</a>
                        </div>
                    </article>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<!-- Comments Section -->
<section class="section-padding bg-white">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto">
            <!-- Comments Header -->
            <div class="text-center mb-12">
                <h2 class="heading-lg text-neutral-900 mb-6">
                    Join the 
                    <span class="text-gradient">Discussion</span>
                </h2>
                <p class="text-xl text-neutral-600">
                    Share your own experiences or ask questions about this tech problem
                </p>
            </div>

            <!-- Giscus Comments -->
            <div class="bg-neutral-50 rounded-2xl p-8">
                <script src="https://giscus.app/client.js"
                        data-repo="Dilupa-Sandika/Affiliate-Web"
                        data-repo-id="R_kgDONXQhbw"
                        data-category="Announcements"
                        data-category-id="DIC_kwDONXQhb84ClDJt"
                        data-mapping="pathname"
                        data-strict="0"
                        data-reactions-enabled="1"
                        data-emit-metadata="0"
                        data-input-position="bottom"
                        data-theme="transparent_dark"
                        data-lang="en"
                        crossorigin="anonymous"
                        async>
                </script>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-padding bg-gradient-to-br from-slate-900 via-gray-900 to-neutral-900 text-white">
    <div class="container-custom text-center">
        <div class="max-w-3xl mx-auto">
            <h2 class="heading-lg text-white mb-6">
                Need Help with Your Tech Problems?
                <span class="bg-gradient-to-r from-blue-400 to-green-400 bg-clip-text text-transparent">
                    We're Here to Help
                </span>
            </h2>
            
            <p class="text-gray-100 text-lg mb-8">
                Don't struggle alone. Our Vegas Tech Hub team has solved hundreds of similar problems and can help you find the right solution.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-6 justify-center">
                <a href="/contact/" class="btn-primary text-lg px-8 py-4">
                    <span class="mr-2">ðŸ’¬</span>
                    Get Personal Help
                </a>
                <a href="/blog/" class="btn-outline text-lg px-8 py-4 border-white text-white hover:bg-white hover:text-gray-900">
                    <span class="mr-2">ðŸ“–</span>
                    Read More Stories
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Add custom styles for prose content -->
<style>
.prose {
    color: #374151;
    line-height: 1.75;
}

.prose h1, .prose h2, .prose h3, .prose h4 {
    color: #111827;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.prose h1 { font-size: 2.25rem; line-height: 1.2; }
.prose h2 { font-size: 1.875rem; line-height: 1.3; }
.prose h3 { font-size: 1.5rem; line-height: 1.4; }
.prose h4 { font-size: 1.25rem; line-height: 1.5; }

.prose p {
    margin-bottom: 1.5rem;
}

.prose ul, .prose ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
}

.prose li {
    margin: 0.5rem 0;
}

.prose strong {
    font-weight: 600;
    color: #111827;
}

.prose a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
}

.prose a:hover {
    color: #1d4ed8;
    text-decoration: underline;
}

.prose blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #6b7280;
}

.prose code {
    background: #f3f4f6;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: #ef4444;
}

.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>