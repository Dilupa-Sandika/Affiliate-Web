<!-- Organization Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Smart Home Authority",
  "url": "{{ metadata.url }}",
  "description": "{{ metadata.description }}",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Las Vegas",
    "addressRegion": "Nevada",
    "addressCountry": "US"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-702-555-0123",
    "contactType": "Customer Service",
    "areaServed": ["Las Vegas", "Henderson", "North Las Vegas", "Boulder City"]
  },
  "sameAs": []
}
</script>

<!-- Website Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "{{ metadata.title }}",
  "url": "{{ metadata.url }}",
  "description": "{{ metadata.description }}",
  "publisher": {
    "@type": "Organization",
    "name": "Smart Home Authority"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": "{{ metadata.url }}/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>

