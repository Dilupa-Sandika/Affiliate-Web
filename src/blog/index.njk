<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-white">
    <!-- Background Animation -->
    <div class="absolute inset-0 z-10 opacity-20">
        <div class="absolute top-20 left-20 w-72 h-72 bg-blue-500 rounded-full filter blur-3xl animate-pulse-subtle"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl animate-pulse-subtle animation-delay-400"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-20 container-custom text-center">
        <div class="max-w-4xl mx-auto">
            <!-- Badge -->
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-neutral-100 border border-neutral-200 text-neutral-900 mb-8 animate-fade-in-down">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-3 animate-pulse"></span>
                <span class="text-sm font-medium">Real Experience Stories</span>
            </div>
            
            <!-- Main Heading -->
            <h1 class="heading-xl text-neutral-900 mb-8 animate-fade-in-up">
                Tech Experience
                <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-green-600 bg-clip-text text-transparent">
                    Blog
                </span>
            </h1>
            
            <!-- Subheading -->
            <p class="text-xl lg:text-2xl text-neutral-700 mb-12 max-w-3xl mx-auto leading-relaxed animate-fade-in-up animation-delay-200">
                Real problems, real solutions from Vegas homeowners. Learn from our experiences solving 
                common tech issues before you face them yourself.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up animation-delay-400">
                <a href="#featured-posts" class="btn-primary text-lg px-8 py-4 shadow-2xl">
                    <span class="mr-2">üìñ</span>
                    Read Featured Stories
                </a>
                <a href="#all-posts" class="btn-outline text-lg px-8 py-4 border-neutral-900 text-neutral-900 hover:bg-neutral-900 hover:text-white">
                    <span class="mr-2">üìù</span>
                    Browse All Posts
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="section-padding bg-white">
    <div class="container-custom">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 text-center">
            <div class="animate-fade-in-up">
                <div class="stat-number">{{ collections.blog.length }}+</div>
                <div class="stat-label">Stories Shared</div>
            </div>
            <div class="animate-fade-in-up animation-delay-200">
                <div class="stat-number">$5000+</div>
                <div class="stat-label">Money Saved</div>
            </div>
            <div class="animate-fade-in-up animation-delay-400">
                <div class="stat-number">200+</div>
                <div class="stat-label">Hours of Research</div>
            </div>
            <div class="animate-fade-in-up animation-delay-600">
                <div class="stat-number">95%</div>
                <div class="stat-label">Success Rate</div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Posts Section -->
{% if collections.blog.length > 0 %}
<section id="featured-posts" class="section-padding bg-gradient-to-br from-neutral-50 to-white">
    <div class="container-custom">
        <div class="text-center mb-16">
            <h2 class="heading-lg text-neutral-900 mb-6">
                Latest 
                <span class="text-gradient">Experience Stories</span>
            </h2>
            <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
                Fresh problem-solving stories and solutions from our Vegas Tech Hub community
            </p>
        </div>
        
        <!-- Featured/Latest Post -->
        {% if collections.featuredBlog and collections.featuredBlog.length > 0 %}
            {% set featuredPost = collections.featuredBlog[0] %}
        {% elif collections.blog and collections.blog.length > 0 %}
            {% set featuredPost = collections.blog[0] %}
        {% else %}
            {% set featuredPost = null %}
        {% endif %}
        {% if featuredPost %}
        <div class="max-w-6xl mx-auto mb-16">
            <article class="review-card hover-lift overflow-hidden">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Featured Image -->
                    <div class="relative">
                        {% if featuredPost.data.featuredImage %}
                        <div class="h-64 lg:h-full bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl overflow-hidden">
                            <img src="{{ featuredPost.data.featuredImage }}" alt="{{ featuredPost.data.title }}" class="w-full h-full object-cover">
                        </div>
                        {% else %}
                        <div class="h-64 lg:h-full bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl flex items-center justify-center">
                            <div class="text-6xl">üîß</div>
                        </div>
                        {% endif %}
                        <div class="absolute top-4 right-4">
                            <span class="badge badge-primary">Latest Story</span>
                        </div>
                    </div>
                    
                    <!-- Content -->
                    <div class="space-y-6 flex flex-col justify-center">
                        <div>
                            <div class="flex items-center space-x-4 text-sm text-neutral-500 mb-4">
                                <span>üìÖ {{ featuredPost.date | date("MMMM dd, yyyy") }}</span>
                                <span>‚è±Ô∏è {{ featuredPost.templateContent | striptags | wordcount / 200 | round }}{{ " min read" if (featuredPost.templateContent | striptags | wordcount / 200 | round) > 0 else "1 min read" }}</span>
                                <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Featured</span>
                            </div>
                            
                            <h3 class="text-3xl font-bold text-neutral-900 mb-4">{{ featuredPost.data.title }}</h3>
                            
                            <p class="text-lg text-neutral-600 leading-relaxed">
                                {{ featuredPost.data.description or (featuredPost.templateContent | striptags | truncate(200)) }}
                            </p>
                        </div>
                        
                        <!-- Tags -->
                        {% if featuredPost.data.tags %}
                        <div class="flex flex-wrap gap-2">
                            {% for tag in featuredPost.data.tags %}
                                {% if tag != "blog" %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
                                    {{ tag }}
                                </span>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                        
                        <div class="flex flex-col sm:flex-row gap-3">
                            <a href="{{ featuredPost.url }}" class="btn-primary flex-1">Read Full Story</a>
                            <a href="/contact/" class="btn-outline flex-1">Get Help</a>
                        </div>
                    </div>
                </div>
            </article>
        </div>
        {% endif %}
    </div>
</section>
{% endif %}

<!-- All Posts Grid Section -->
<section id="all-posts" class="section-padding bg-white">
    <div class="container-custom">
        <div class="text-center mb-16">
            <h2 class="heading-lg text-neutral-900 mb-6">
                All Experience
                <span class="text-gradient">Stories</span>
            </h2>
            <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
                Browse our complete collection of real-world tech problem solutions
            </p>
        </div>
        
        {% if collections.blog.length > 1 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for post in collections.blog %}
                {% if loop.index > 1 %} <!-- Skip first post as it's featured above -->
                <article class="card-premium hover-lift">
                    <!-- Image -->
                    {% if post.data.featuredImage %}
                    <div class="h-48 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg mb-6 overflow-hidden">
                        <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}" class="w-full h-full object-cover">
                    </div>
                    {% else %}
                    <div class="h-48 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg flex items-center justify-center mb-6">
                        <div class="text-4xl">
                            {% if "remote" in post.data.tags %}üì∫
                            {% elif "wifi" in post.data.tags %}üì∂
                            {% elif "smart" in post.data.tags %}üè†
                            {% elif "diy" in post.data.tags %}üîß
                            {% else %}üí°
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="space-y-4">
                        <!-- Meta info -->
                        <div class="flex items-center justify-between text-sm text-neutral-500">
                            <span>{{ post.date | date("MMM dd, yyyy") }}</span>
                            <span>{{ post.templateContent | striptags | wordcount / 200 | round }}{{ " min read" if (post.templateContent | striptags | wordcount / 200 | round) > 0 else "1 min read" }}</span>
                        </div>
                        
                        <!-- Title -->
                        <h3 class="text-xl font-semibold text-neutral-900 line-clamp-2">
                            <a href="{{ post.url }}" class="hover:text-primary-600 transition-colors">
                                {{ post.data.title }}
                            </a>
                        </h3>
                        
                        <!-- Description -->
                        <p class="text-neutral-600 text-sm line-clamp-3">
                            {{ post.data.description or (post.templateContent | striptags | truncate(120)) }}
                        </p>
                        
                        <!-- Tags -->
                        {% if post.data.tags %}
                        <div class="flex flex-wrap gap-1">
                            {% for tag in post.data.tags | slice(0, 3) %}
                                {% if tag != "blog" %}
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-neutral-100 text-neutral-700">
                                    {{ tag }}
                                </span>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                        
                        <!-- Read more button -->
                        <a href="{{ post.url }}" class="btn-outline w-full text-sm">Read Story</a>
                    </div>
                </article>
                {% endif %}
            {% endfor %}
        </div>
        
        
        {% elif collections.blog.length == 1 %}
        <div class="text-center py-16">
            <div class="text-6xl mb-6">üìù</div>
            <h3 class="text-2xl font-semibold text-neutral-900 mb-4">One Story and Counting!</h3>
            <p class="text-neutral-600 mb-8">We're just getting started. Check back soon for more tech problem-solving adventures.</p>
            <a href="{{ collections.blog[0].url }}" class="btn-primary">Read Our First Story</a>
        </div>
        
        {% else %}
        <div class="text-center py-16">
            <div class="text-6xl mb-6">üöÄ</div>
            <h3 class="text-2xl font-semibold text-neutral-900 mb-4">Coming Soon!</h3>
            <p class="text-neutral-600 mb-8">We're working on our first tech experience stories. Check back soon for real problem-solving adventures.</p>
            <a href="/contact/" class="btn-primary">Share Your Story</a>
        </div>
        {% endif %}
    </div>
</section>

